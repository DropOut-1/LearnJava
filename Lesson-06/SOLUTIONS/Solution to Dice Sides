//Die Class

package dicesides;

import java.util.Random;

public class Die{
    /*methods;
    roll();
    get sides;
    set sides(int sides);
    get value
    */
    
    /*
    Mathods and their scope:
    */
    private Random generator;
    private int value;
    private int sides;
    public Die(int sides){
        this.sides = sides;
        this.generator = new Random(); 
        }
    
    public Die(int sides, int seed){
        this.sides = sides;
        this.generator = new Random(seed);
        }
    
    public int setSides(int sides){
        this.sides = sides;
        return this.sides;
        }
    
    public int roll(){
        this.value = this.generator.nextInt( this.sides)+1;
        return this.value;
        }
    
    public int getSides(){
        return this.sides;
        }
    
    public int getValue(){
        return this.value;
    }
    
}


//Main Method


package dicesides;

public class DiceSides{
    public static void main(String []args){ 
        Die hepta = new Die(7);
    System.out.println("Current Value : " + hepta.roll() );    
    System.out.println("Total Value : " + hepta.getSides() );
    
        
    
    }

}
